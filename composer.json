{
    "name": "douglasgreen/dateparser",
    "description": "A PHP library to parse dates, times, and recurring date expressions",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/dateparser",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "date",
        "time",
        "date parser",
        "time parser",
        "date interpretation",
        "natural language date",
        "PHP",
        "recurring dates",
        "date expressions",
        "time expressions"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\DateParser\\": "src/",
            "DouglasGreen\\DateParser\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "douglasgreen/utility": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "post-update-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "test": "phpunit"
    }
}
